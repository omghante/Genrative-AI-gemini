{
    "version": 2,
    "builds": [
      {
        "src": "index.js",  
        "use": "@vercel/node"  
      }
    ],
    "routes": [
      {
        "src": "/sendText",
        "methods": ["POST"],
        "dest": "/api/sendText.js"
      },
      {
        "src": "/(.*)",
        "dest": "index.js" 
      }
    ]
  }
  